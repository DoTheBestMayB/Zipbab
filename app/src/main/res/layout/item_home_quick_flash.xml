<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_margin8">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_meet_thumbnail"
        app:shapeAppearance="@style/HomeQuickFlashStyle"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="3:2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/sample_image_salary" />

    <TextView
        android:id="@+id/tv_meet_name"
        style="@style/header_title14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin8"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@id/iv_meet_thumbnail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_meet_thumbnail"
        tools:text="흑백 요리사 흑백 요리사 흑백 요리사 " />

    <ImageView
        android:id="@+id/iv_remain_time_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="@dimen/default_margin4"
        android:src="@drawable/baseline_access_time_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_meet_name" />

    <TextView
        android:id="@+id/tv_remain_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/body_content14"
        android:layout_marginStart="@dimen/default_margin4"
        app:layout_constraintBottom_toBottomOf="@id/iv_remain_time_icon"
        app:layout_constraintStart_toEndOf="@id/iv_remain_time_icon"
        app:layout_constraintTop_toTopOf="@id/iv_remain_time_icon"
        tools:text="3시간 30분" />

</androidx.constraintlayout.widget.ConstraintLayout>
